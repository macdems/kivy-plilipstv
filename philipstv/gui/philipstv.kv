                    text: '\uf051'
                    on_release: app.keypress('Next')
                    on_long_press: app.keypress('Previous')
                RepeatButton:
                    font_name: 'philipstv/gui/data/FontAwesome.ttf'
                    font_size: '24dp'
                    text: '\uf027'
                    background_color: 1.2, 1.2, 1.2, 1
                    on_release: app.keypress('VolumeDown')
                    initial_delay: 0.2
                Button:
                    font_name: 'philipstv/gui/data/FontAwesome.ttf'
                    font_size: '24dp'
                    text: '\uf6a9'
                    background_color: 1.2, 1.2, 1.2, 1
                    on_release: app.keypress('Mute')
                RepeatButton:
                    font_name: 'philipstv/gui/data/FontAwesome.ttf'
                    font_size: '24dp'
                    text: '\uf028'
                    background_color: 1.2, 1.2, 1.2, 1
                    on_release: app.keypress('VolumeUp')
                    initial_delay: 0.2
            Button:
                text: S('Applications')
                on_release:
                    root.transition.direction = 'up'
                    root.current = 'apps'
        Widget:
            id: hello
            canvas:
                Rectangle:
                    source: 'philipstv/gui/data/tap_hold.png'
                    pos: src.pos[0] + 0.09 * src.size[0], src.pos[1] - 0.36 * src.size[1]
                    size: 0.90 *  src.size[0], 0.90 * src.size[0] * 35 / 31

    Screen:
        name: 'ambilight'
        on_pre_enter:
            root.transition.direction = 'right'
            app.fill_ambilight()
            ambilight_lightness.bind(value=app.on_ambilight_lightness)
            ambilight_saturation.bind(value=app.on_ambilight_saturation)
        on_pre_leave:
            root.transition.direction = 'left'
            ambilight_lightness.unbind(value=app.on_ambilight_lightness)
            ambilight_saturation.unbind(value=app.on_ambilight_saturation)
        BoxLayout:
            orientation: 'vertical'
            ControlButton:
                id: ambilight_off
                text: S('Ambilight Off')
                group: 'ambilight'
                allow_no_selection: False
                size_hint: 1, None
                settings: { 2131230766: { "activenode_id": 2131230767 }, 2131230783: { "value": True } }
            Accordion:
                orientation: 'vertical'
                # title_template: 'AmbilightAccordionItemTitle'
                AccordionItem:
                    title: S('Follow Video')
                    id: ambilight_video_ac
                    RecycleView:
                        id: ambilight_video
                        viewclass: 'ControlButton'
                        RecycleBoxLayout:
                            # padding: 0, "5dp", 0, "5dp"
                            orientation: 'vertical'
                            default_size_hint: 1, None
                            size_hint_y: None
                            height: self.minimum_height
                            row_default_height: 60
                AccordionItem:
                    title: S('Follow Audio')
                    id: ambilight_audio_ac
                    RecycleView:
                        id: ambilight_audio
                        viewclass: 'ControlButton'
                        RecycleBoxLayout:
                            # padding: 0, "5dp", 0, "5dp"
                            orientation: 'vertical'
                            default_size_hint: 1, None
                            size_hint_y: None
                            height: self.minimum_height
                            row_default_height: 60
                AccordionItem:
                    title: S('Lounge Light')
                    id: ambilight_lounge_ac
                    RecycleView:
                        id: ambilight_lounge
                        viewclass: 'ControlButton'
                        RecycleBoxLayout:
                            # padding: 0, "5dp", 0, "5dp"
                            orientation: 'vertical'
                            default_size_hint: 1, None
                            size_hint_y: None
                            height: self.minimum_height
                            row_default_height: 60
                AccordionItem:
                    title: S('Advanced')
                    BoxLayout:
                        orientation: 'vertical'
                        Label:
                            text: S('Lightness')
                            size_hint_y: None
                            # height: self.minimum_height
                        Slider:
                            id: ambilight_lightness
                            min: 0
                            max: 10
                            step: 1
                            orientation: 'horizontal'
                            size_hint_y: None
                            # height: self.minimum_height
                            row_default_height: 60
                        Label:
                            text: S('Saturation')
                            size_hint_y: None
                            # height: self.minimum_height
                        Slider:
                            id: ambilight_saturation
                            min: -2
                            max: 2
                            step: 1
                            orientation: 'horizontal'
                            size_hint_y: None
                            # height: self.minimum_height
                            row_default_height: 60
                        ColorWheel:
                            id: ambilight_color
                            on_color:
                                app.on_ambilight_color()
                        # Widget:
            Button:
                text: S('Back')
                size_hint: 1, None
                on_release:
                    root.current = 'remote'

    Screen:
        name: 'display'
        on_pre_enter:
            root.transition.direction = 'left'
            app.fill_display_modes(display_modes)
        on_pre_leave:
            root.transition.direction = 'right'
        BoxLayout:
            orientation: 'vertical'
            RecycleView:
                id: display_modes
                viewclass: 'ControlButton'
                RecycleBoxLayout:
                    orientation: 'vertical'
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    row_default_height: 60
            Label:
                size_hint_y: None
            Button:
                text: S('Back')
                size_hint: 1, None
                on_release:
                    root.current = 'remote'

    Screen:
        name: 'settings'
        on_pre_enter:
            root.transition.direction = 'left'
        on_pre_leave:
            root.transition.direction = 'right'
            app.clean_hello()
        BoxLayout:
            orientation: 'vertical'
            id: settings
            Button:
                text: S('Back')
                size_hint: 1, None
                on_release:
                    app.close_settings()

    Screen:
        name: 'apps'
        on_pre_enter:
            root.transition.direction = 'up'
            app.fill_applications(applications)
        on_pre_leave:
            root.transition.direction = 'down'
        BoxLayout:
            orientation: 'vertical'
            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                RecycleView:
                    id: applications
                    viewclass: 'ApplicationButton'
                    RecycleBoxLayout:
                        default_size_hint: 1, None
                        size_hint: 1, None
                        height: self.minimum_height
                        orientation: 'vertical'
            Label:
                size_hint_y: None
            Button:
                text: S('Back')
                size_hint: 1, None
                on_release:
                    root.current = 'remote'
