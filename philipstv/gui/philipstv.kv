#:import S philipstv.gui.resources.S
#:import LongPressButton philipstv.gui.widgets.buttons
#:import RepeatButton philipstv.gui.widgets.buttons


[AccordionItemTitle@Label]:
    text: ctx.title
    normal_background: ctx.item.background_disabled_normal
    disabled_background: ctx.item.background_disabled_normal
    canvas.before:
        Color:
            rgba: self.disabled_color if self.disabled else self.color
        BorderImage:
            source: self.disabled_background if self.disabled else self.normal_background
            pos: self.pos
            size: self.size
        PushMatrix
        Translate:
            xy: self.center_x, self.center_y
        Rotate:
            angle: 90 if ctx.item.orientation == 'horizontal' else 0
            axis: 0, 0, 1
        Translate:
            xy: -self.center_x, -self.center_y
    canvas.after:
        PopMatrix


<ApplicationButton>:
    on_release: app.root.current = 'remote'


<PinPopup@Popup>
    id: pin_popup
    title: 'Enter PIN displayed on your TV'
    title_align: 'center'
    size_hint: 1, None
    height: '148dp'
    auto_dismiss: False
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            id: pin_value
            focus: True
            multiline: False
            hint_text:'0000'
            input_filter:'int'
            size_hint: 1, None
            height: '32dp'
            halign: 'center'
            font_size: '24dp'
        Widget:
            size_hint: 1, None
            height: '8dp'
        Button:
            text: S('OK')
            size_hint: 1, None
            on_release:
                pin_popup.dismiss()


<SettingPairButton>:
    size_hint_y: None
    height: max(dp(20), self.texture_size[1] + dp(32))


ScreenManager:
    canvas.before:
        Color:
            rgb: .2, .2, .2
        Rectangle:
            size: self.size
            pos: self.pos

    Screen:
        name: 'remote'
        id: remote
        BoxLayout:
