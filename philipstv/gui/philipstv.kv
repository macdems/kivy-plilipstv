                    on_release:
                        root.current = 'ambilight'
                Button:
                    font_name: 'philipstv/gui/data/FontAwesome.ttf'
                    font_size: '32dp'
                    text: '\uf011'
                    # background_color: 1.0, 0.8, 0.8
                    color: 1.0, 0.3, 0.3, 1
                    on_release: app.keypress('Standby')
                Button:
                    font_name: 'philipstv/gui/data/FontAwesome.ttf'
                    font_size: '32dp'
                    text: '\uf042'
